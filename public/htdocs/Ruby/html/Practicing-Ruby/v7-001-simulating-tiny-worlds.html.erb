    fd rand(<span style="color:#00D">5</span>..<span style="color:#00D">25</span>)

    data[<span style="color:#A60">:energy</span>] = initial_energy

    set_color rabbit_color
  <span style="color:#080;font-weight:bold">end</span>

  <span style="color:#777"># rule 4: let the rabbits wander</span>
  creatures! { rt(rand(<span style="color:#00D">1</span>...<span style="color:#00D">40</span>)); lt(rand(<span style="color:#00D">1</span>..<span style="color:#00D">40</span>)); fd(<span style="color:#00D">1</span>) }
  
