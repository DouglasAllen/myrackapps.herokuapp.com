    with_probability(cabbage_density) { set_color(cabbage_color) } 
  <span style="color:#080;font-weight:bold">end</span>

  <span style="color:#777"># rule 2: cabbage regrowth</span>
  patches! <span style="color:#080;font-weight:bold">do</span>
    with_probability(regrowth_rate) { set_color(cabbage_color) } 
  <span style="color:#080;font-weight:bold">end</span>

  create_creatures(<span style="color:#00D">200</span>)

  <span style="color:#777"># rule 3: arrange a crowd of rabbits</span>
  creatures <span style="color:#080;font-weight:bold">do</span> 
