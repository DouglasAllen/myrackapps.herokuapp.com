p metrics[<span style="color:#00D">2</span>]  <span style="color:#777">#=&gt; {:bbox=&gt;[52, 7, 38, 98]}</span>
p metrics[<span style="color:#00D">3</span>]  <span style="color:#777">#=&gt; {:bbox=&gt;[52, 7, 38, 98]}</span>
