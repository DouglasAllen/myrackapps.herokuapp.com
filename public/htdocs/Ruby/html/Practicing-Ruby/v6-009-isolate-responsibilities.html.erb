<span style="color:#036;font-weight:bold">Spyglass</span>.deliver_message(<span style="color:#606">subject</span>: <span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">Links for you!!!!!!</span><span style="color:#710">&quot;</span></span>,               <span style="color:#777">#6</span>
