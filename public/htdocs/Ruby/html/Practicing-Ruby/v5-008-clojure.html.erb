        (<span style="color:#080;font-weight:bold">alter</span> p <span style="color:#080;font-weight:bold">assoc</span> <span style="color:#A60">:food</span> (<span style="color:#080;font-weight:bold">rand-int</span> food-range))))
    (<span style="color:#080;font-weight:bold">doall</span>                                               <span style="color:#777">;3</span>
     (<span style="color:#080;font-weight:bold">for</span> [x home-range y home-range]                    <span style="color:#777">;4</span>
       (<span style="color:#080;font-weight:bold">do</span>                                               <span style="color:#777">;5</span>
         (<span style="color:#080;font-weight:bold">alter</span> (place [x y]) 
                <span style="color:#080;font-weight:bold">assoc</span> <span style="color:#A60">:home</span> <span style="color:#069">true</span>)
