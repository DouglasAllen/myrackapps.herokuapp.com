<span style="color:#777"># Using CSS selectors</span>
username = doc.css(<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">li.message span.user-text</span><span style="color:#710">&quot;</span></span>).text 
</pre></div>
</div>
