  <span style="color:#070;font-weight:bold">&lt;p&gt;</span>
    <span style="color:#070;font-weight:bold">&lt;a</span> <span style="color:#b48">rel</span>=<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">permalink message</span><span style="color:#710">&quot;</span></span> <span style="color:#b48">href</span>=<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">http://rstat.us/update?id=12345</span><span style="color:#710">&quot;</span></span><span style="color:#070;font-weight:bold">&gt;</span>
      <span style="color:#070;font-weight:bold">&lt;span</span> <span style="color:#b48">class</span>=<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">user-text</span><span style="color:#710">&quot;</span></span><span style="color:#070;font-weight:bold">&gt;</span>Carols10cents<span style="color:#070;font-weight:bold">&lt;/span&gt;</span> said:
    <span style="color:#070;font-weight:bold">&lt;/a&gt;</span>
