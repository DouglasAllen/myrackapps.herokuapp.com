<span style="color:#777"># Fill out the `form` that has `class=users-search`,</span>
<span style="color:#777"># putting the username in the `input` with `name=search`</span>

search_path = users_search_response.css(<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">form.users-search</span><span style="color:#710">&quot;</span></span>).first[<span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">action</span><span style="color:#710">&quot;</span></span>]
